// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Ensure this is in your .env file
}

model User {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String   @unique
  assets Asset[] // One-to-many relationship with assets
}

model Asset {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  assignee_id String   @db.ObjectId
  user        User     @relation(fields: [assignee_id], references: [id])
  title       String
  description String
  assignee    String
  created_by  String
  asset_type  String
  attachment  String
  status      String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  deleted_at  DateTime?

  @@map("assets") // Map to the MongoDB collection "assets"
}
